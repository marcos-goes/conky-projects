background yes
use_xft yes
xftfont Tahoma:size=8
xftalpha 0.1
update_interval 0.5
total_run_times 0
own_window yes
#own_window_type normal
#own_window_transparent yes
own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager
own_window_colour Black
own_window_argb_visual yes
own_window_argb_value 192
double_buffer yes
minimum_size 50 25
maximum_width 600
draw_shades no
draw_outline no
draw_borders no
draw_graph_borders no
default_color gray
default_shade_color red
default_outline_color green
alignment top_right
gap_x 30
gap_y 30
no_buffers no
uppercase no
cpu_avg_samples 4
net_avg_samples 1
override_utf8_locale yes
use_spacer left
text_buffer_size 256

TEXT
${voffset -90}
${font Arial:size=60}${color #B2FF66}${color #99CCFF}${color LightGreen}
$alignc${time %H:%M}${font Arial:size=18}
$alignc${time %A}${font Arial:size=18}
$alignc${time %d %B %Y}
${font Arial:bold:size=10}${color Tan2}SYSTEM ${color LightGreen}${hr 2}$font$color
$nodename $alignr${freq_g cpu0}Ghz
$sysname $kernel $alignr $machine
Uptime $alignr${uptime}
Processes (active/total) $alignr$running_processes/$processes

${font Arial:bold:size=10}${color Tan2}BATTERY ${color LightGreen}${hr 2}$font$color
$battery $alignr ${battery_percent}%
$battery_bar

${font Arial:bold:size=10}${color Tan2}PROCESSORS & MEMORY ${color LightGreen}${hr 2}$font$color
CPU  ${cpu cpu0}% $alignr ${hwmon temp 1}Â°C
${cpubar cpu0}
#CPU1  ${cpu cpu1}% ${cpubar cpu1}
#CPU2  ${cpu cpu2}% ${cpubar cpu2}
#CPU3  ${cpu cpu3}% ${cpubar cpu3}
#CPU4  ${cpu cpu4}% ${cpubar cpu4}
$font$color MEM  $memperc% $alignr $mem / $memmax
$membar
SWAP $swapperc% $alignr $swap / $swapmax
$swapbar

${font Arial:bold:size=10}${color Tan2}HARD DISK DRIVES ${color LightGreen}${hr 2}$font$color
Mint   ${fs_used_perc /}%  (${fs_type /}) $alignr${fs_used /} / ${fs_size /}
${fs_bar /}
Arquivos ${fs_used_perc /mnt/ARQUIVOS}%  $alignr ${fs_used /mnt/ARQUIVOS} / ${fs_size /mnt/ARQUIVOS}
${fs_bar /mnt/ARQUIVOS}
Windows   ${fs_used_perc /mnt/SISTEMA}%  $alignr ${fs_used /mnt/SISTEMA} / ${fs_size /mnt/SISTEMA}
${fs_bar /mnt/SISTEMA}

${font Arial:bold:size=10}${color Tan2}NETWORK ${color LightGreen}${hr 2}$font$color
Wireless Network $alignr $wireless_essid
Interface $alignr $gw_iface
IP on $gw_iface $alignr ${addr wlp4s0}
Gateway $alignr $gw_ip
#
#Download: $alignr ${downspeed}/s   ${totaldown}
#Upload: $alignr  ${upspeed}/s   ${totalup}

${font Arial:bold:size=10}${color Tan2}INDICATORS ${color LightGreen}${hr 2}$font$color
${execp xset q | grep "Num Lock:" | awk '{if ($8 == "on") {print "${color LightGreen}NUM LOCK"} else {print "${color #666666}NUM LOCK"}}'}   ${execp xset q | grep "Caps Lock:" | awk '{if ($4 == "on") {print "${color LightGreen}CAPS LOCK"} else {print "${color #666666}CAPS LOCK"}}'}   ${execp xset q | grep "Scroll Lock:" | awk '{if ($12 == "on") {print "${color LightGreen}SCROLL LOCK"} else {print "${color #666666}SCROLL LOCK"}}'}
${color}
